<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.health.mapper.MentalProfileMapper">

    <resultMap type="MentalProfile" id="MentalProfileResult">
        <result property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="realName" column="real_name"/>
        <result property="gender" column="gender"/>
        <result property="age" column="age"/>
        <result property="occupation" column="occupation"/>
        <result property="emotionalState" column="emotional_state"/>
        <result property="sleepQuality" column="sleep_quality"/>
        <result property="stressLevel" column="stress_level"/>
        <result property="mainConcerns" column="main_concerns"/>
        <result property="otherConcerns" column="other_concerns"/>
        <result property="expectations" column="expectations"/>
        <result property="therapyExperience" column="therapy_experience"/>
        <result property="preference" column="preference"/>
        <result property="additionalNotes" column="additional_notes"/>
        <result property="status" column="status"/>
        <result property="isVisibleToConsultant" column="is_visible_to_consultant"/>
        <result property="visibilityUpdatedTime" column="visibility_updated_time"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
        <result property="remark" column="remark"/>
    </resultMap>

    <!-- 查询咨询师可见的心理档案列表 -->
    <select id="selectVisibleProfileList" parameterType="MentalProfile" resultMap="MentalProfileResult">
        SELECT * FROM mental_profile
        WHERE is_visible_to_consultant = 1
        <if test="realName != null and realName != ''">
            AND real_name LIKE CONCAT('%', #{realName}, '%')
        </if>
        <if test="gender != null and gender != ''">
            AND gender = #{gender}
        </if>
        <if test="occupation != null and occupation != ''">
            AND occupation LIKE CONCAT('%', #{occupation}, '%')
        </if>
        ORDER BY create_time DESC
    </select>

    <!-- 根据用户ID查询心理档案 -->
    <select id="selectProfileByUserId" parameterType="Long" resultMap="MentalProfileResult">
        SELECT * FROM mental_profile WHERE user_id = #{userId}
    </select>

    <sql id="selectMentalProfileVo">
        select id, user_id, real_name, gender, age, occupation, emotional_state, sleep_quality,
        stress_level, main_concerns, other_concerns, expectations, therapy_experience,
        preference, additional_notes, status, is_visible_to_consultant, visibility_updated_time,
        create_by, create_time, update_by, update_time, remark
        from mental_profile
    </sql>

    <select id="selectMentalProfileById" parameterType="Long" resultMap="MentalProfileResult">
        <include refid="selectMentalProfileVo"/>
        where id = #{id}
    </select>

    <select id="selectMentalProfileByUserId" parameterType="Long" resultMap="MentalProfileResult">
        <include refid="selectMentalProfileVo"/>
        where user_id = #{userId} and status = '0'
    </select>

    <select id="selectMentalProfileList" parameterType="MentalProfile" resultMap="MentalProfileResult">
        <include refid="selectMentalProfileVo"/>
        <where>
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="realName != null  and realName != ''"> and real_name like concat('%', #{realName}, '%')</if>
            <if test="gender != null  and gender != ''"> and gender = #{gender}</if>
            <if test="occupation != null  and occupation != ''"> and occupation like concat('%', #{occupation}, '%')</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
            <if test="isVisibleToConsultant != null "> and is_visible_to_consultant = #{isVisibleToConsultant}</if>
        </where>
        order by create_time desc
    </select>

    <insert id="insertMentalProfile" parameterType="MentalProfile" useGeneratedKeys="true" keyProperty="id">
        insert into mental_profile
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">user_id,</if>
            <if test="realName != null">real_name,</if>
            <if test="gender != null">gender,</if>
            <if test="age != null">age,</if>
            <if test="occupation != null">occupation,</if>
            <if test="emotionalState != null">emotional_state,</if>
            <if test="sleepQuality != null">sleep_quality,</if>
            <if test="stressLevel != null">stress_level,</if>
            <if test="mainConcerns != null">main_concerns,</if>
            <if test="otherConcerns != null">other_concerns,</if>
            <if test="expectations != null">expectations,</if>
            <if test="therapyExperience != null">therapy_experience,</if>
            <if test="preference != null">preference,</if>
            <if test="additionalNotes != null">additional_notes,</if>
            <if test="status != null">status,</if>
            <if test="isVisibleToConsultant != null">is_visible_to_consultant,</if>
            <if test="visibilityUpdatedTime != null">visibility_updated_time,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="remark != null">remark,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">#{userId},</if>
            <if test="realName != null">#{realName},</if>
            <if test="gender != null">#{gender},</if>
            <if test="age != null">#{age},</if>
            <if test="occupation != null">#{occupation},</if>
            <if test="emotionalState != null">#{emotionalState},</if>
            <if test="sleepQuality != null">#{sleepQuality},</if>
            <if test="stressLevel != null">#{stressLevel},</if>
            <if test="mainConcerns != null">#{mainConcerns},</if>
            <if test="otherConcerns != null">#{otherConcerns},</if>
            <if test="expectations != null">#{expectations},</if>
            <if test="therapyExperience != null">#{therapyExperience},</if>
            <if test="preference != null">#{preference},</if>
            <if test="additionalNotes != null">#{additionalNotes},</if>
            <if test="status != null">#{status},</if>
            <if test="isVisibleToConsultant != null">#{isVisibleToConsultant},</if>
            <if test="visibilityUpdatedTime != null">#{visibilityUpdatedTime},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="remark != null">#{remark},</if>
        </trim>
    </insert>

    <update id="updateMentalProfile" parameterType="MentalProfile">
        update mental_profile
        <trim prefix="SET" suffixOverrides=",">
            <if test="realName != null">real_name = #{realName},</if>
            <if test="gender != null">gender = #{gender},</if>
            <if test="age != null">age = #{age},</if>
            <if test="occupation != null">occupation = #{occupation},</if>
            <if test="emotionalState != null">emotional_state = #{emotionalState},</if>
            <if test="sleepQuality != null">sleep_quality = #{sleepQuality},</if>
            <if test="stressLevel != null">stress_level = #{stressLevel},</if>
            <if test="mainConcerns != null">main_concerns = #{mainConcerns},</if>
            <if test="otherConcerns != null">other_concerns = #{otherConcerns},</if>
            <if test="expectations != null">expectations = #{expectations},</if>
            <if test="therapyExperience != null">therapy_experience = #{therapyExperience},</if>
            <if test="preference != null">preference = #{preference},</if>
            <if test="additionalNotes != null">additional_notes = #{additionalNotes},</if>
            <if test="status != null">status = #{status},</if>
            <if test="isVisibleToConsultant != null">is_visible_to_consultant = #{isVisibleToConsultant},</if>
            <if test="visibilityUpdatedTime != null">visibility_updated_time = #{visibilityUpdatedTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteMentalProfileById" parameterType="Long">
        delete from mental_profile where id = #{id}
    </delete>

    <delete id="deleteMentalProfileByIds" parameterType="Long">
        delete from mental_profile where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>