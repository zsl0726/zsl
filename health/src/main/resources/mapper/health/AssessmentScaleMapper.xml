<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.health.mapper.AssessmentScaleMapper">
    
    <resultMap type="AssessmentScale" id="AssessmentScaleResult">
        <result property="id"    column="id"    />
        <result property="scaleCode"    column="scale_code"    />
        <result property="scaleName"    column="scale_name"    />
        <result property="description"    column="description"    />
        <result property="questionCount"    column="question_count"    />
        <result property="timeRequired"    column="time_required"    />
        <result property="status"    column="status"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectAssessmentScaleVo">
        select id, scale_code, scale_name, description, question_count, time_required, status, create_by, create_time, update_by, update_time, remark from assessment_scale
    </sql>

    <select id="selectAssessmentScaleList" parameterType="AssessmentScale" resultMap="AssessmentScaleResult">
        <include refid="selectAssessmentScaleVo"/>
        <where>  
            <if test="scaleName != null  and scaleName != ''"> and scale_name like concat('%', #{scaleName}, '%')</if>
            <if test="questionCount != null "> and question_count = #{questionCount}</if>
        </where>
    </select>
    
    <select id="selectAssessmentScaleById" parameterType="Long" resultMap="AssessmentScaleResult">
        <include refid="selectAssessmentScaleVo"/>
        where id = #{id}
    </select>

    <insert id="insertAssessmentScale" parameterType="AssessmentScale" useGeneratedKeys="true" keyProperty="id">
        insert into assessment_scale
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="scaleCode != null and scaleCode != ''">scale_code,</if>
            <if test="scaleName != null and scaleName != ''">scale_name,</if>
            <if test="description != null">description,</if>
            <if test="questionCount != null">question_count,</if>
            <if test="timeRequired != null">time_required,</if>
            <if test="status != null">status,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="scaleCode != null and scaleCode != ''">#{scaleCode},</if>
            <if test="scaleName != null and scaleName != ''">#{scaleName},</if>
            <if test="description != null">#{description},</if>
            <if test="questionCount != null">#{questionCount},</if>
            <if test="timeRequired != null">#{timeRequired},</if>
            <if test="status != null">#{status},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateAssessmentScale" parameterType="AssessmentScale">
        update assessment_scale
        <trim prefix="SET" suffixOverrides=",">
            <if test="scaleCode != null and scaleCode != ''">scale_code = #{scaleCode},</if>
            <if test="scaleName != null and scaleName != ''">scale_name = #{scaleName},</if>
            <if test="description != null">description = #{description},</if>
            <if test="questionCount != null">question_count = #{questionCount},</if>
            <if test="timeRequired != null">time_required = #{timeRequired},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteAssessmentScaleById" parameterType="Long">
        delete from assessment_scale where id = #{id}
    </delete>

    <delete id="deleteAssessmentScaleByIds" parameterType="String">
        delete from assessment_scale where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>